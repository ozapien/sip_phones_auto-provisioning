#Configure the WAN port type; 0-DHCP(default), 1-PPPoE, 2-Static IP Address
{% if (network.use_dhcp |default(0)) %}
network.internet_port.type = 0
{% else %}
network.internet_port.type = 2
network.internet_port.ip = {{ network.ip }}
network.internet_port.mask = {{ network.mask }}
network.internet_port.gateway = {{ network.gateway }}
network.primary_dns= {{ network.ns1 }}
network.secondary_dns = {{ network.ns2 }}
{% endif %}